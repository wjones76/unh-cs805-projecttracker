<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Task name</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Assigned to</th>
    <th>Category</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Version</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.task_name %></td>
    <td><%= task.description %></td>
    <td><%= task.priority %></td>
    <td><%= task.assigned_to %></td>
    <td><%= task.category %></td>
    <td><%= task.start_date %></td>
    <td><%= task.end_date %></td>
    <td><%= task.version %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

