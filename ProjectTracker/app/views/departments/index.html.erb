<h1>Departments</h1>

<table class="defaultTable">
  <tr>
    <th>Id</th>
    <th>Department</th>
    <th></th>
  </tr>

  <% @departments.each do |department| %>
      <tr>
        <td><%= department.id %></td>
        <td><%= link_to department.department, department %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %>
          | <%= link_to 'Destroy', department, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= link_to 'New Department', new_department_path %>
