<h1>Roles</h1>

<table class="defaultTable">
  <tr>
    <th>Role name</th>
    <th>Description</th>
    <th>Created by</th>
    <th>Created on</th>
    <th></th>
  </tr>

  <% @roles.each do |role| %>
      <tr>
        <td><%= link_to role.role_name, role %></td>
        <td><%= role.description %></td>
        <td><%= role.created_by %></td>
        <td><%= role.created_on %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %> |
          <%= link_to 'Destroy', role, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

