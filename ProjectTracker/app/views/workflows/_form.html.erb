<%= form_for(@workflow) do |f| %>
    <% if @workflow.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@workflow.errors.count, "error") %> prohibited this workflow from being saved:</h2>

          <ul>
            <% @workflow.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :workflow_name %><br/>
      <%= f.text_field :workflow_name %>
    </div>
    <div class="field">
      <%= f.label :department %><br/>
      <%= f.collection_select(:department_id, Department.all, :id, :department, prompt: true) %>
    </div>
    <div class="field">
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :created_by %><br/>
      <%= f.text_field :created_by %>
    </div>
    <div class="field">
      <%= f.label :status %><br/>
      <%= f.collection_select(:status_id, Status.all, :id, :status, prompt: true) %>
    </div>
    <div class="row">
      <div class="col-sm-2">
      </div>
      <div class="col-sm-10">
        <div class="actions">
          <%= f.submit %>
        </div>
      </div>
    </div>
<% end %>
