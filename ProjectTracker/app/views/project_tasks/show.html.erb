<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-sm-2">
    <b>Task name:</b>
  </div>
  <div class="col-sm-10">
    <%= @project_task.task_name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <b>Description:</b>
  </div>
  <div class="col-sm-10">
    <%= @project_task.description %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <b>Project:</b>
  </div>
  <div class="col-sm-10">
    <%= @project_task.project.project_name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <b>Priority:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.priority.priority if @project_task.priority %>
  </div>
  <div class="col-sm-2">
    <b>Assigned to:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.assigned_to %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <b>Category:</b>
  </div>
  <div class="col-sm-10">
    <%= @project_task.category.category if @project_task.category %>
  </div>
</div>

<div class="row">
  <div class="col-sm-2">
    <b>Start date:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.start_date %>
  </div>
  <div class="col-sm-2">
    <b>End date:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.end_date %>
  </div>
</div>


<div class="row">
  <div class="col-sm-2">
    <b>Version:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.version %>
  </div>
  <div class="col-sm-2">
    <b>Status:</b>
  </div>
  <div class="col-sm-4">
    <%= @project_task.status.status if @project_task.status %>
  </div>
</div>
<br />
<div class="row">
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to 'Edit', edit_project_task_path(@project_task) %> |
    <%= link_to 'Back to ' + @project_task.project.project_name, @project_task.project %>
  </div>
</div>