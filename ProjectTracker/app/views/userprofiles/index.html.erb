<h1>User Profiles</h1>

<table class="defaultTable">
  <tr>
    <th>Id</th>
    <th>Fullname</th>
    <th>Nt login</th>
    <th>Department</th>
    <th>Phone number</th>
    <th>Email</th>
    <th>Job title</th>
    <th>Created on</th>
    <th></th>
  </tr>

  <% @userprofiles.each do |userprofile| %>
      <tr>
        <td><%= userprofile.id %></td>
        <td><%= link_to userprofile.first_name + ' ' + userprofile.last_name, userprofile %></td>
        <td><%= userprofile.nt_login %></td>
        <td><%= userprofile.department.department %></td>
        <td><%= userprofile.phone_number %></td>
        <td><%= userprofile.email %></td>
        <td><%= userprofile.job_title %></td>
        <td><%= userprofile.created_on %></td>
        <td><%= link_to 'Edit', edit_userprofile_path(userprofile) %>
          | <%= link_to 'Destroy', userprofile, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

